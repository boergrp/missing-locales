{
  "include": [
    "packages/**/*",
    "__tests__"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
  }
}
