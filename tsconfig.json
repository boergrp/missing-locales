{
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.json",
    "./**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**/*",
    "node_modules/**/*",
    "**/node_modules",
    "dist",
    "**/dist",
    "dist/**/*",
    "**/dist/**/*",
    "packages/**/dist",
    "packages/**/dist/**/*",
    "packages/**/node_modules",
    "packages/**/node_modules/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
  }
}
