{
  "name": "@borerteam/missing-locales",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "Maxx Borer <maxxborer@gmail.com>",
  "description": "Plugins and CLI that helps you find missed keys in your localization files.",
  "keywords": [
    "vite",
    "webpack",
    "rollup",
    "cli",
    "i18n",
    "localization",
    "locale",
    "missing",
    "keys"
  ],
  "scripts": {
    "test": "nx run-many --target=test --all --parallel",
    "build": "nx run-many --target=build --all --parallel",
    "publish": "nx run-many --target=publish --all --parallel",
    "release": "pnpm run build && pnpm run publish",
    "graph": "nx graph",
    "clear:lock": "nx run-many --target=clear:lock --all --parallel",
    "clear:node_modules": "nx run-many --target=clear:node_modules --all --parallel",
    "clear:dependencies": "nx run-many --target=clear:dependencies --all --parallel",
    "reinstall": "pnpm run clear:lock && pnpm run clear:node_modules && pnpm run clear:dependencies && pnpm ip",
    "alpha": "nx run workspace:version --releaseAs=prerelease --preid=alpha",
    "beta": "nx run workspace:version --releaseAs=prerelease --preid=beta",
    "patch": "nx run workspace:version --releaseAs=patch",
    "minor": "nx run workspace:version --releaseAs=minor",
    "major": "nx run workspace:version --releaseAs=major",
    "semver": "nx g @jscutlery/semver:install"
  },
  "license": "MIT",
  "engines": {
    "node": "^16.0.0 || >=18"
  },
  "pnpm": {
    "overrides": {
      "vite-plugin-missing-locales": "workspace:*"
    }
  },
  "devDependencies": {
    "nx": "15.4.2"
  }
}
